# Environment Variables Template
# Copy this to .env.local and fill in your values

# =================================
# NextAuth Configuration
# =================================

# Generate a random secret key (minimum 32 characters)
# Use: openssl rand -hex 32
# Or: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
NEXTAUTH_SECRET=your-super-secret-key-here-minimum-32-characters-long

# Your application URL
# Development: http://localhost:3000
# Production: https://yourdomain.com
NEXTAUTH_URL=http://localhost:3000

# =================================
# Database Configuration
# =================================

# MongoDB connection strings
# Admin database (stores admin users)
MONGODB_URI_ADMIN=mongodb://127.0.0.1:27017/saarfitness_admin

# Staff database (stores staff users)
MONGODB_URI_STAFF=mongodb://127.0.0.1:27017/saarfitness_staff

# Members database (stores member data)
MONGODB_URI_MEMBERS=mongodb://127.0.0.1:27017/saarfitness_members

# =================================
# Email Configuration (Optional)
# =================================

# SMTP settings for email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@saarfitness.com

# =================================
# Application Configuration
# =================================

# Node environment
NODE_ENV=development

# Application name
APP_NAME=SAAR FITNESS

# =================================
# Security Configuration
# =================================

# Session duration (in seconds)
# Default: 30 days = 2592000 seconds
SESSION_MAX_AGE=2592000

# Enable security headers in production
ENABLE_SECURITY_HEADERS=true

# =================================
# Feature Flags (Optional)
# =================================

# Enable audit logging
ENABLE_AUDIT_LOG=false

# Enable two-factor authentication
ENABLE_2FA=false

# Enable email notifications
ENABLE_EMAIL_NOTIFICATIONS=true

# =================================
# Production-Only Settings
# =================================

# When deploying to production, also set:
# - Use HTTPS for NEXTAUTH_URL
# - Use strong, unique NEXTAUTH_SECRET
# - Use secure MongoDB credentials
# - Enable CORS restrictions
# - Configure rate limiting
# - Set up monitoring and logging
